<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x260"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/y10"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/subColor3"
        android:text="新建相册"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/newFolderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y10"
        android:layout_below="@id/newFolderTitle"
        android:textSize="12dp"
        android:text="请输入相册名称"
        android:id="@+id/newFolderHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:background="@drawable/edittext_background"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/x15"
        android:layout_marginTop="@dimen/y15"
        android:layout_marginEnd="@dimen/x15"
        android:layout_marginBottom="@dimen/y15"
        android:layout_below="@id/newFolderHint"
        android:id="@+id/newFolderName"
        android:textColor="@color/mainColor3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:gravity="center"
        android:maxLines="1"/>

    <TextView
        android:layout_below="@id/newFolderName"
        android:id="@+id/newFolderConfirm"
        android:layout_width="@dimen/x130"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/x10"
        android:layout_toEndOf="@+id/newFolderCancel"
        android:text="确定"
        android:textColor="@color/mainColor2"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/newFolderCancel"
        android:layout_below="@id/newFolderName"
        android:padding="@dimen/x10"
        android:textColor="@color/mainColor2"
        android:gravity="center"
        android:textSize="18sp"
        android:text="取消"
        android:layout_width="@dimen/x130"
        android:layout_height="wrap_content" />
</RelativeLayout>