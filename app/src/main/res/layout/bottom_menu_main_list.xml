<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomMenu"
    android:layout_width="match_parent"
    android:background="@color/mainColor1"
    android:layout_height="@dimen/y48"
    android:layout_alignParentBottom="true">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/x10"
        android:id="@+id/bottomMenuShare"
        android:layout_width="@dimen/x24"
        android:layout_height="@dimen/y24"
        android:layout_alignParentStart="true"
        android:src="@mipmap/btn_share_n_xxxhdpi" />

    <TextView
        android:textColor="@color/darkGray"
        android:textSize="18sp"
        android:id="@+id/bottomMenuMoveTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="移动到" />

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/x10"
        android:id="@+id/bottomMenuDelete"
        android:layout_width="@dimen/x24"
        android:layout_height="@dimen/y24"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/btn_delete_n_xxxhdpi" />
</RelativeLayout>